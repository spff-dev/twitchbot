{
  "announcements": {
    "enabled": true,
    "onlineOnly": true,
    "intervalSeconds": 600,
    "messages": [
      "Remember to follow if you’re enjoying the stream!",
      "Join the Discord: https://example.com/discord"
    ]
  },
  "greeting": {
    "enabled": true,
    "message": "✅ I am online",
    "delayMs": 1500,
    "minIntervalSec": 30
  },
  "templates": {
    "follow": "Thanks for the follow, {user}!",
    "sub": "Thanks for the sub, {user}!",
    "resub": "Thanks for resubbing, {user}!",
    "subgift": "{user} gifted subs, thank you!",
    "bits": "Thanks for the bits, {user}!",
    "raid": "Thanks for the raid, {user}! Welcome raiders!"
  },
  "events": {
    "follow": {
      "enabled": true,
      "anonymous": false,
      "anonymousName": "friend"
    },
    "sub": {
      "enabled": true
    },
    "resub": {
      "enabled": true
    },
    "subgift": {
      "enabled": true
    },
    "bits": {
      "enabled": true
    },
    "raid": {
      "enabled": true
    }
  },
  "moderation": {
    "linkGuard": {
      "enabled": true,
      "deleteOnly": true,
      "warnTemplate": "@{login} links aren’t allowed. Ask a mod for !permit.",
      "allowedRoles": [
        "mod",
        "owner"
      ],
      "whitelistHosts": [
        "twitch.tv",
        "clips.twitch.tv"
      ],
      "permitTtlSec": 180
    }
  }
}
